<div class="page-wrapper">
  <div class="left-section">
    <%= form_with url: login_path, local: true, class: 'login-form' do |form| %>
      <label for="email">Email</label>
      <div class="input-group">
        <%= form.email_field :email, id: 'email', required: true, class: 'form-control' %>
      </div>
      <label for="password">Senha</label>
      <div class="input-group">
        <%= form.password_field :password, id: 'password', required: true, class: 'form-control' %>
      </div>
      <%= form.submit 'Entrar', class: 'btn-submit' %>
    <% end %>
  </div>
  <div class="right-section">
    <div class="logo">
      <h1>Bibliotech</h1>
      <img src="<%= asset_path 'logo.jpg' %>" alt="Bibliotech Logo">
    </div>
  </div>
</div>

<style>
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: Roboto Mono, sans-serif; 
}

body {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background-color: #f5f5f5; 
}

.page-wrapper {
    display: flex;
    width: 100%;
    max-width: 1280px;
    background-color: #fff;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
}

.left-section {
    background-color: #f0f0f0; 
    padding: 40px;
    width: 50%; 
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.right-section {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 50%; 
    padding: 40px;
    background-color: #fff; 
}

.input-group {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
    width: 100%; 
    height: 40px; 
}

label {
    display: block;
    margin-bottom: 15px;
    font-weight: bold;
}

input[type="email"], input[type="password"] {
    width: 100%;
    padding: 15px; 
    font-size: 14px; 
    border-radius: 4px;
    border: 1px solid #ccc;
}

.btn-submit {
    width: 80%;
    height: 40px; 
    padding: 10px; 
    background-color: #007bff; 
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 16px; 
    margin-top: 20px;
    max-width: 300px; 
}

.btn-submit:hover {
    background-color: #0056b3;
}

.logo {
    text-align: center;
}

.logo h1 {
    font-size: 2.5em; 
    color: black; 
    margin-bottom: 20px;
}

.logo img {
    width: 100%;
    max-width: 500px; 
    height: auto;
}

@media (max-width: 768px) {
    .page-wrapper {
        flex-direction: column;
    }
    .left-section, .right-section {
        width: 100%;
    }
}
</style>
