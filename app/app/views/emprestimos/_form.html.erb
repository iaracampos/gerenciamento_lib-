<%= form_for(@emprestimo, html: { multipart: true }) do |f| %>
  <% if @emprestimo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@emprestimo.errors.count, "erro") %> impediram que este empréstimo fosse salvo:</h2>
  
      <ul>
        <% @emprestimo.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
    <%= f.label :usuario_id, 'Usuário', class: "font-roboto-mono" %>
    <%= f.select :usuario_id, Usuario.all.collect { |u| [u.nome, u.id] }, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :livro_id, 'Livro', class: "font-roboto-mono" %>
    <%= f.select :livro_id, Livro.all.collect { |l| [l.nome, l.id] }, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :data_emprestimo, 'Data Empréstimo', class: "font-roboto-mono" %>
    <%= f.date_field :data_emprestimo, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :data_devolucao, 'Data Devolução', class: "font-roboto-mono" %>
    <%= f.date_field :data_devolucao, class: "form-control" %>
  </div>

  <%= f.submit "Salvar", class: "btn btn-primary btn-padded" %>
<% end %>
